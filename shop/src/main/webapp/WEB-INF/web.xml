<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>shop</display-name>
  <context-param>
    <param-name>capchaServerMode</param-name>
    <param-value>session</param-value>
  </context-param>
  <context-param>
    <param-name>capchaTTL</param-name>
    <param-value>120</param-value>
  </context-param>
  <listener>
    <listener-class>com.epam.hnyp.shop.listener.ContextInitializer</listener-class>
  </listener>
  <listener>
    <listener-class>com.epam.hnyp.shop.listener.SessionListener</listener-class>
  </listener>
  <welcome-file-list>
    <welcome-file>redirect.jsp</welcome-file>
  </welcome-file-list>
 
  <!--  <resource-ref>
    <description>data base mysql connection pool config</description>
    <res-ref-name>jdbc/task_shop</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  -->
  
  <!-- servlet mappings -->
  <servlet>
    <servlet-name>CapchaDrawerServlet</servlet-name>
    <servlet-class>com.epam.hnyp.shop.servlet.CapchaDrawerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CapchaDrawerServlet</servlet-name>
    <url-pattern>/capchaDrawer</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AvatarDrawerServlet</servlet-name>
    <servlet-class>com.epam.hnyp.shop.servlet.AvatarDrawerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AvatarDrawerServlet</servlet-name>
    <url-pattern>/avatar</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.epam.hnyp.shop.servlet.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>UserLoginCheckerServlet</servlet-name>
    <servlet-class>com.epam.hnyp.shop.servlet.UserLoginCheckerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>UserLoginCheckerServlet</servlet-name>
    <url-pattern>/loginCheck</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>MainJSP</servlet-name>
    <jsp-file>/WEB-INF/jsp/main.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>MainJSP</servlet-name>
    <url-pattern>/main</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductsServlet</servlet-name>
    <servlet-class>com.epam.hnyp.shop.servlet.ProductsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductsServlet</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.epam.hnyp.shop.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.epam.hnyp.shop.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ProductImageServlet</servlet-name>
    <servlet-class>com.epam.hnyp.shop.servlet.ProductImageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ProductImageServlet</servlet-name>
    <url-pattern>/productImage</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>CartManipulateServlet</servlet-name>
  	<servlet-class>com.epam.hnyp.shop.servlet.CartManipulateServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CartManipulateServlet</servlet-name>
  	<url-pattern>/cartManipulate</url-pattern>
  </servlet-mapping>
  <servlet>
  	<servlet-name>ShowCartJSP</servlet-name>
  	<jsp-file>/WEB-INF/jsp/cart.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
  	<servlet-name>ShowCartJSP</servlet-name>
  	<url-pattern>/cart</url-pattern>
  </servlet-mapping>
  
  <!-- error mappings -->
  <servlet>
    <servlet-name>ServiceErrorServlet</servlet-name>
    <jsp-file>/WEB-INF/jsp/error/service_error.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>ServiceErrorServlet</servlet-name>
    <url-pattern>/serviceError</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>com.epam.hnyp.shop.service.ServiceLayerException</exception-type>
    <location>/serviceError</location>
  </error-page>
  <servlet>
    <servlet-name>ErrorServlet</servlet-name>
    <servlet-class>com.epam.hnyp.shop.servlet.ErrorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ErrorServlet</servlet-name>
    <url-pattern>/error</url-pattern>
  </servlet-mapping>
  <error-page>
    <exception-type>java.lang.RuntimeException</exception-type>
    <location>/error</location>
  </error-page>
</web-app>